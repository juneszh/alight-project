{
    "name": "juneszh/alight-project",
    "description": "Alight Project is a project template with Alight framework.",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "php",
        "lightweight",
        "framework",
        "restful",
        "fast-route",
        "medoo",
        "simplecache",
        "psr-16",
        "monolog",
        "whoops",
        "job-scheduler"
    ],
    "authors": [
        {
            "name": "June So",
            "email": "alight@juneszh.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "ctr\\": "app/controller",
            "job\\": "app/job",
            "mod\\": "app/model",
            "svc\\": "app/service"
        }
    },
    "require": {
        "php": ">=7.4",
        "juneszh/alight": "^1.1"
    },
    "scripts": {
        "post-create-project-cmd": "mv config/app.example.php config/app.php",
        "post-update-cmd": "Alight\\Router::clearCache",
        "admin-install": "Alight\\Admin::install",
        "admin-download": "Alight\\Admin::download",
        "admin-build": "cd vendor/juneszh/alight-admin/npm && npm install && npm run build"
    },
    "config": {
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
