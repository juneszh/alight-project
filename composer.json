{
    "name": "juneszh/alight-project",
    "description": "Alight Project is a project template with Alight framework.",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "php",
        "lightweight",
        "framework",
        "restful",
        "fast-route",
        "medoo",
        "simplecache",
        "psr-16",
        "monolog",
        "whoops",
        "job-scheduler"
    ],
    "authors": [
        {
            "name": "June So",
            "email": "alight@juneszh.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "ctr\\": "app/Controllers",
            "job\\": "app/Jobs",
            "mod\\": "app/Models",
            "svc\\": "app/Services"
        }
    },
    "require": {
        "juneszh/alight": "*"
    },
    "scripts": {
        "post-update-cmd": "rm -rf storage/route/",
        "admin-install": [
            "@composer require juneszh/alight-admin",
            "cp -rn vendor/juneszh/alight-admin/example/config/* ./config/",
            "Alight\\Admin::install",
            "@admin-download"
        ],
        "admin-build": "cd vendor/juneszh/alight-admin/npm && npm install && npm run build",
        "admin-download": "Alight\\Admin::download"
    },
    "config": {
        "optimize-autoloader": true
    }
}
